# =================================
# Production Environment Variables
# =================================

# Base Configuration
NEXT_PUBLIC_BASE_URL=https://livada.bio
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Sideband Service
NEXT_PUBLIC_SIDEBAND_HOST=api.livada.bio
NEXT_PUBLIC_SIDEBAND_PORT=443
NEXT_PUBLIC_SIDEBAND_HASH=a3641ddf337fcb827bdc092a4d9fd9de

# Authentication (Managed by Netlify)
# Note: These values are automatically injected by Netlify
# - GATSBY_NETLIFY_IDENTITY_URL
# - GATSBY_NETLIFY_IDENTITY_API_URL

# API Endpoints
NEXT_PUBLIC_API_URL=https://api.livada.bio
NEXT_PUBLIC_STRAPI_URL=${NEXT_PUBLIC_API_URL}/strapi

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MAINTENANCE=false

# Performance
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true